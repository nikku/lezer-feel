{
  "name": "lezer-feel",
  "version": "0.5.1",
  "description": "Lezer-based FEEL grammar",
  "main": "dist/index.cjs",
  "type": "module",
  "exports": {
    "import": "./dist/index.es.js",
    "require": "./dist/index.cjs"
  },
  "source": "src/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "author": "Nico Rehwaldt <https://github.com/nikku>",
  "license": "MIT",
  "devDependencies": {
    "@lezer/generator": "^1.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/mocha": "^9.1.1",
    "chokidar-cli": "^3.0.0",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.76.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@lezer/highlight": "^1.0.0",
    "@lezer/lr": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nikku/lezer-feel.git"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "npm run build -- --watch",
    "test": "mocha test/test-*.js",
    "test:watch": "chokidar '{dist,test}/**/*.{js,txt}' -c 'npm test'",
    "dev": "run-p *:watch",
    "all": "run-s build lint test",
    "lint": "run-s lint:types",
    "lint:types": "tsc --noEmit test/types.ts"
  },
  "files": [
    "dist"
  ]
}
